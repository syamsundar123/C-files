//Reverse of an array
#include<stdio.h>
main()
{
    int n,i;
    printf("Enter number of elements you want to store in array:");
    scanf("%d",&n);
    int arr[n];//Creating array with n elements where n is nunber of elements user wants to store in an array
    printf("Enter %d elements to Store: \n");
	//Stores Elements enetered by the user
    for(i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }
    printf("Actual array: ");
	//Prints Actual  array
    for(i=0;i<n;i++)
    {
        printf("%d ",arr[i]);
    }
    printf("\nReverse Array: ");
	//prints array after reversing
    
    for(i=n-1;i>=0;i--)
    {
       printf("%d ",arr[i]);
    }
    
}
